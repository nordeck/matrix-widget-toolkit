    "i18next-parser": "^8.11.0",
    "react-scripts": "5.0.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "tsc && rollup --config ../../rollup.config.mjs",
    "postbuild": "copyfiles -E -u 1 src/locales/**/*.json build",
    "tsc": "tsc",
    "lint": "eslint .",
    "test": "jest --watch",
    "depcheck": "depcheck --ignores=@types/node --ignore-dirs=lib,build",
