// Package specific tsconfig that extends the root one.
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "outDir": "lib",
    "rootDir": ".",
    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true
  },

  "include": ["src", "../../../../matrix-js-sdk/src/@types/*.d.ts"]
}
